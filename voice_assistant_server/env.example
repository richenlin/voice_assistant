# 语音助手服务端环境变量配置

# OpenAI API密钥（如果使用在线服务）
OPENAI_API_KEY=your_openai_api_key_here

# 日志级别
LOG_LEVEL=info

# Grafana管理员密码（监控服务）
GRAFANA_PASSWORD=admin123

# 服务端口配置
SERVER_PORT=8080
OLLAMA_PORT=11434
REDIS_PORT=6379

# 资源限制配置
MAX_MEMORY=4G
MAX_CPU=2.0

# 时区设置
TZ=Asia/Shanghai

# 模型配置
FUNASR_MODEL=paraformer-zh
OLLAMA_MODEL=qwen:7b
CHATTTS_DEVICE=cpu

# 安全配置
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# 缓存配置
REDIS_MAX_MEMORY=512mb
MODEL_CACHE_SIZE=2G 